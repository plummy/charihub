.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar
      - 2.times do
        %br
      .well
        %table.table
          %thead
            %tr
              %th Hello, #{current_user.name} !
          %tbody
            %tr
              %td
                %span.fa.fa-home
                = link_to 'Dashboard', preview_dashboard_static_pages_path,  :remote => true
            %tr
              %td.fa.fa-newspaper-o
                = link_to 'Feed', '#' 
            %tr
              %td
                %span.fa.fa-map-marker
                = link_to 'Map', preview_map_static_pages_path,  :remote => true
            %tr
              %td
                %span.fa.fa-bar-chart
                = link_to 'Stats', preview_stats_static_pages_path,  :remote => true
            %tr
              %td
                %a{"data-target" => "#new_post", "data-toggle" => "modal", :type => "button"} 
                  %span.fa.fa-plus
                  New Post
          
      
    .col-sm-4.col-md-10
      #dashboard_preview
        = render 'default'
        
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      


#new_post.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "logIn", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#myModalLabel.modal-title New Post
      .modal-body
        = render 'post/new'
