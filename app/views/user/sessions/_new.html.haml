= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "sign_in_user"}, :format => :json, :remote => true) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true
    = f.input :password, required: false
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :button, "Sign In".html_safe, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign In..."}
  - 2.times do
    %br
  .modal-footer
    = link_to "Forgot your password?", new_password_path(resource_name)

